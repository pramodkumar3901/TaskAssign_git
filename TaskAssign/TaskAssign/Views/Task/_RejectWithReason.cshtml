@model TaskAssign.Models.TaskList

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("_RejectWithReason","Task",FormMethod.Post)) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaskList</legend>

         <div class="editor-label">
            @Html.LabelFor(model => model.RejectReason)
        </div>

         <div style="height:150px; border-left:2px solid #ccc;overflow-y:auto;padding:1px;">
            @Html.Raw(Model.RejectReason)
        </div>

        <div class="editor-field">
             @Html.TextArea("RejectReason", "", new { @Value = "" })
            @Html.ValidationMessageFor(model => model.RejectReason)
        </div>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

