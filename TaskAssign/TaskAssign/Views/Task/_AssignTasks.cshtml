@model TaskAssign.Models.TaskList

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Assign Task</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.AssignedTo)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.AssignedTo, (SelectList)ViewBag.AllMembersList, "Select One")
            @Html.ValidationMessageFor(model => model.AssignedTo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AllottedHrs)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AllottedHrs)
            @Html.ValidationMessageFor(model => model.AllottedHrs)
        </div>
        <div>
            
             @Html.CheckBoxFor(model => model.SctrictMode)
            <span>Strict Mode</span>
        </div>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}
