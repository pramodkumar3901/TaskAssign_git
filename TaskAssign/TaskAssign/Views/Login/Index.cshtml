@model TaskAssign.Models.UserLogin

@{
    ViewBag.Title = "Login"; //test comment
    Layout = "";
}

<div style="margin:0 auto; width:300px; margin-top:10%;">
@using (Html.BeginForm("Login","Login")) {
    @Html.ValidationSummary(true)

    <div style="border:1px solid gray;">
       
        <div class="editor-field">
           <div style="width:100%;height:30px;border:0px solid;text-align:center;">LOGIN</div>
        </div>
        <hr style="margin:0px;border:0px solid; border-top:1px solid;" />
        <div class="editor-field">
            @Html.TextBoxFor(model => model.UserName, new  {placeholder = "Username",style="width:100%;height:30px;border:0px solid;text-align:center;", onKeyup="enableLogin()" })
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <hr style="margin:0px;border:0px solid; border-top:1px solid;" />
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new {placeholder = "Password",style="width:100%;height:30px;border:0px solid;text-align:center;", onKeyup="enableLogin()"})
            @Html.ValidationMessageFor(model => model.Password)
        </div>
           </div>
     <input id="btnSubmit" type="submit" value="Login" style="border:1px solid gray;padding:5px;width:100%;border-top:0px solid;display:none;"/>
}
    </div>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    function enableLogin() {
        var username = $('#UserName').val().trim();
        var password = $('#Password').val().trim();

        if (username != "" && password != "") {
            $('#btnSubmit').show();
        }
        else {
            $('#btnSubmit').hide();
        }
    }

</script>